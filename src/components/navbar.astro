---
// src/components/Navbar.astro
const { currentPath } = Astro.props;
---

<nav class="top-nav">
  <div class="nav-links">
    <a href="/" class={currentPath === "" ? "active" : ""}>首頁 / INDEX</a>
    <a href="/about" class={currentPath === "about" ? "active" : ""}>關於我 / ABOUT</a>
    <a href="/blog" class={currentPath === "blog" ? "active" : ""}>生活隨筆</a>
    <a href="/research" class={currentPath === "research" ? "active" : ""}>讀讀文獻</a>
    <a href="/reading" class={currentPath === "reading" ? "active" : ""}>看看書籍</a>
    <a href="/music" class={currentPath === "music" ? "active" : ""}>聽聽音樂</a>
    <a href="/projects" class={currentPath === "projects" ? "active" : ""}>作品集</a>
  </div>

  <div class="nav-right">
    {currentPath === "about" && (
      <button id="lang-toggle" class="lang-toggle-btn">
        <span class="lang-option active" data-lang="zh">中文</span>
        <span class="lang-divider">/</span>
        <span class="lang-option" data-lang="en">EN</span>
      </button>
    )}
    <button id="search-btn" class="search-btn" title="搜尋 (/)">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
    </button>
    <div class="current-time">
      <span id="live-time"></span>
    </div>
  </div>
</nav>

<style>
  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(139, 69, 19, 0.2);
    padding: 0.8rem 0;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--muted);
    transition: 0.3s;
    font-size: 0.85rem;
    letter-spacing: 1px;
    font-family: "Noto Serif TC", serif;
  }

  .nav-links a:hover, .nav-links a.active {
    color: var(--ink);
    font-weight: 700;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  .current-time {
    color: var(--accent);
    font-family: monospace;
    font-size: 0.8rem;
  }

  /* 語言切換：改為輕量文字樣式，與 nav 連結一致 */
  .lang-toggle-btn {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    background: none;
    border: none;
    cursor: pointer;
    font-family: sans-serif;
    font-size: 0.75rem;
    padding: 0;
    transition: 0.3s;
  }

  .lang-toggle-btn:hover .lang-option { color: var(--accent); }

  .lang-option {
    color: var(--muted);
    transition: 0.3s;
    font-weight: 400;
    letter-spacing: 1px;
  }

  .lang-option.active {
    color: var(--ink);
    font-weight: 700;
  }

  .lang-divider {
    color: var(--border);
    font-size: 0.7rem;
  }

  .search-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    color: var(--muted);
    padding: 0.2rem;
    transition: color 0.3s;
    line-height: 1;
  }
  .search-btn:hover { color: var(--accent); }
</style>