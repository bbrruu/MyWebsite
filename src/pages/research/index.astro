---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// 1. 抓取所有研究文獻並排序
const allResearch = (await getCollection("research")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// 2. 依照作者 (Author) 進行分組，建立索引
const groupedByAuthor = allResearch.reduce((acc, post) => {
    const author = post.data.author || "佚名";
    if (!acc[author]) acc[author] = [];
    acc[author].push(post);
    return acc;
}, {});

const authors = Object.keys(groupedByAuthor);
---

<Layout title="文獻回顧 | 學術存檔 - Bruce">
    <div class="paper-texture"></div>

    <main class="research-archive">
        <header class="archive-header">
            <h1>文獻回顧 <small>LITERATURE REVIEW</small></h1>
            <div class="header-line"></div>
        </header>

        <div class="archive-content">
            {authors.map((author) => (
                <section class="author-section">
                    <div class="author-header">
                        <div class="author-name-group">
                            <span class="prefix">Researcher / Scholar</span>
                            <h2 class="author-title">{author}</h2>
                        </div>
                        <div class="note-count">{groupedByAuthor[author].length} PAPERS</div>
                    </div>

                    <div class="note-list">
                        {groupedByAuthor[author].map((post) => (
                            <div class="note-wrapper">
                                <a href={`/research/${post.id}`} class="research-entry">
                                    <div class="title-swap-container">
                                        <div class="title-default">
                                            〈{post.data.title}〉
                                        </div>
                                        <div class="title-hover">
                                            <span class="focus-author">{post.data.author}</span> 
                                            <span class="cat-tag">#{post.data.category || 'Paper'}</span>
                                            {post.data.tags && post.data.tags.slice(0, 2).map(tag => (
                                                <span class="sub-tag">{tag}</span>
                                            ))}
                                        </div>
                                    </div>
                                    <div class="entry-arrow">
                                        <span class="view-text">READ NOTES</span>
                                        <span class="arrow">→</span>
                                    </div>
                                </a>
                            </div>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </main>
</Layout>

<style>
    .research-archive {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 4rem;
        font-family: "Noto Serif TC", serif;
    }

    .archive-header h1 {
        font-size: 1.6rem;
        margin: 0;
        font-weight: 700;
        letter-spacing: -1.5px;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }
    .archive-header h1 small {
        font-size: 0.75rem;
        font-family: sans-serif;
        letter-spacing: 4px;
        color: var(--muted);
        font-weight: 400;
    }

    .header-line { width: 100%; height: 1px; background: var(--border); margin: 1rem 0 2.5rem; position: relative; }
    .header-line::after { content: ''; position: absolute; left: 0; top: -1px; width: 80px; height: 3px; background: var(--accent); }

    .author-section { margin-bottom: 3rem; }
    .author-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding-bottom: 0.7rem;
        border-bottom: 2px solid var(--ink);
        margin-bottom: 0.8rem;
    }
    .author-name-group .prefix {
        font-size: 0.6rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        color: var(--muted);
        font-family: sans-serif;
        display: block;
        margin-bottom: 0.3rem;
    }
    .author-title { font-size: 1.2rem; margin: 0; color: var(--ink); font-weight: 700; }
    .note-count {
        font-size: 0.72rem;
        color: var(--accent);
        font-weight: 700;
        font-family: sans-serif;
        letter-spacing: 1px;
    }

    .research-entry {
        display: flex;
        align-items: center;
        justify-content: space-between;
        text-decoration: none;
        color: inherit;
        padding: 0.8rem 0;
        border-bottom: 1px dashed var(--border);
        transition: 0.4s ease;
    }
    .research-entry:hover { background: rgba(139, 69, 19, 0.02); padding-left: 1.5rem; }

    .title-swap-container {
        flex: 1;
        position: relative;
        height: 1.5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
    }
    .title-default, .title-hover {
        font-size: 0.95rem;
        font-weight: 700;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        white-space: nowrap;
        line-height: 1.5rem;
    }
    .title-hover {
        position: absolute; top: 0; left: 0; 
        opacity: 0; 
        transform: translateY(15px); 
        color: var(--accent);
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .cat-tag { 
        font-size: 0.8rem; 
        font-weight: 700; 
        color: var(--accent); 
        background: rgba(139, 69, 19, 0.1);
        padding: 2px 8px;
        border-radius: 4px;
        font-family: sans-serif; 
    }

    .sub-tag {
        font-size: 0.75rem;
        color: var(--muted);
        font-weight: 400;
        font-family: sans-serif;
    }
    
    .research-entry:hover .title-default { opacity: 0; transform: translateY(-15px); }
    .research-entry:hover .title-hover { opacity: 1; transform: translateY(0); }

    .entry-arrow { 
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.75rem; 
        letter-spacing: 2px; 
        color: var(--muted); 
        opacity: 0.4; 
        transition: 0.4s; 
        font-family: sans-serif;
    }
    .research-entry:hover .entry-arrow { opacity: 1; color: var(--accent); transform: translateX(5px); }
    .view-text { font-weight: 700; }

    @media (max-width: 850px) {
        .research-archive { margin: 2rem auto; }
        .archive-header h1 { font-size: 2.5rem; flex-direction: column; gap: 0.5rem; }
        .author-title { font-size: 1.6rem; }
        .title-default, .title-hover { font-size: 1.1rem; }
        .entry-arrow .view-text { display: none; }
    }
</style>