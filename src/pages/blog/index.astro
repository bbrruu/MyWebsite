    }

    .cat-tag {
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--accent);
        background: rgba(139, 69, 19, 0.1);
        padding: 2px 8px;
        border-radius: 4px;
        font-family: sans-serif;
    }
    .sub-tag {
        font-size: 0.75rem;
        color: var(--muted);
        font-weight: 400;
        font-family: sans-serif;
    }

    .blog-entry:hover .title-default { opacity: 0; transform: translateY(-15px); }
    .blog-entry:hover .title-hover { opacity: 1; transform: translateY(0); }

    .entry-arrow {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.75rem;
