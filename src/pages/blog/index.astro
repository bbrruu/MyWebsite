---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

// 1. ÊäìÂèñÊñáÁ´†‰∏¶ÊéíÂ∫è
const allPosts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// 2. ÂÆöÁæ©ÂàÜÈ°ûÊ®ôÁ±§
const categories = ["EVERYDAY-LIFE", "GAME", "REFLECTION", "LEARNING"];

// 3. ËôïÁêÜÊúà‰ªΩÂàÜÁµÑÈÇèËºØ
const groupedPosts: Record<string, CollectionEntry<"blog">[]> = allPosts.reduce((acc: Record<string, CollectionEntry<"blog">[]>, post) => {
    const date = new Date(post.data.pubDate);
    const year = date.getFullYear();
    const month = date.getMonth() + 1;
    const monthKey = `${year}Âπ¥ ${month}Êúà`;
    if (!acc[monthKey]) acc[monthKey] = [];
    acc[monthKey].push(post);
    return acc;
}, {});

const months = Object.keys(groupedPosts);
---

<Layout title="ÁîüÊ¥ªÈö®Á≠Ü | ÊãæÂÖâÁõÆÈåÑ - Bruce">
    <div class="paper-texture"></div>

    <main class="blog-archive">
        <header class="archive-header">
            <h1>ÁîüÊ¥ªÈö®Á≠Ü <small>COLLECTED MOMENTS</small></h1>
            <div class="header-line"></div>

            <nav class="category-filter">
                <button class="cat-btn active" data-category="all">ÂÖ®ÈÉ® ALL</button>
                {categories.map((cat) => (
                    <button class="cat-btn" data-category={cat}>{cat}</button>
                ))}
            </nav>
        </header>

        <div class="archive-content" id="master-list">
            {months.map((month) => (
                <section class="month-section" data-month={month}>
                    <div class="month-header">
                        <div class="month-name-group">
                            <span class="prefix">Daily Journal / Diary</span>
                            <h2 class="month-title">{month}</h2>
                        </div>
                        <div class="note-count">{groupedPosts[month].length} ENTRIES</div>
                    </div>

                    <div class="note-list">
                        {groupedPosts[month].map((post) => (
                            <div class="note-wrapper" data-cat={post.data.category}>
                                <a href={`/blog/${post.id}`} class="blog-entry">
                                    <div class="title-swap-container">
                                        <div class="title-default">
                                            {post.data.title}
                                        </div>
                                        <div class="title-hover">
                                            <span class="cat-tag">#{post.data.category}</span>
                                            <span class="sub-tag">üìç {post.data.location || "Taipei"}</span>
                                            <span class="sub-tag">ÂøÉÊÉÖÔºö{post.data.mood || "ÈÇÑË°å"}</span>
                                        </div>
                                    </div>
                                    <div class="entry-arrow">
                                        <span class="view-text">READ ENTRY</span>
                                        <span class="arrow">‚Üí</span>
                                    </div>
                                </a>
                            </div>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </main>
</Layout>

<script>
    const setupFilters = () => {
        const buttons = document.querySelectorAll(".cat-btn");
        const posts = document.querySelectorAll(".note-wrapper");
        const monthSections = document.querySelectorAll(".month-section");

        if (buttons.length === 0) return;

        buttons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const selectedCat = btn.getAttribute("data-category")?.trim().toUpperCase();

                buttons.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");

                posts.forEach((post) => {
                    const postCat = post.getAttribute("data-cat")?.trim().toUpperCase();
                    const htmlPost = post as HTMLElement;
                    if (selectedCat === "ALL" || postCat === selectedCat) {
                        htmlPost.classList.remove("is-hidden");
                    } else {
                        htmlPost.classList.add("is-hidden");
                    }
                });

                setTimeout(() => {
                    monthSections.forEach((section) => {
                        const htmlSection = section as HTMLElement;
                        const visible = htmlSection.querySelectorAll(".note-wrapper:not(.is-hidden)");
                        htmlSection.classList.toggle("month-hidden", visible.length === 0);
                    });
                }, 100);
            });
        });
    };

    document.addEventListener("DOMContentLoaded", setupFilters);
    document.addEventListener("astro:page-load", setupFilters);
</script>

<style>
    .blog-archive {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 4rem;
