    .note-wrapper.is-hidden { opacity: 0; max-height: 0; pointer-events: none; }

    .blog-entry {
        display: flex;
        align-items: center;
        justify-content: space-between;
        text-decoration: none;
        color: inherit;
        padding: 0.9rem 0;
        border-bottom: 1px dashed var(--border);
        transition: 0.4s ease;
    }
    .blog-entry:hover { background: rgba(139, 69, 19, 0.02); padding-left: 1.5rem; }

    .title-swap-container {
        flex: 1;
        position: relative;
        height: 1.5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
    }
    .title-default, .title-hover {
        font-size: 1rem;
        font-weight: 700;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        white-space: nowrap;
        line-height: 1.5rem;
    }
    .title-hover {
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transform: translateY(15px);
        color: var(--accent);
        display: flex;
        align-items: center;
