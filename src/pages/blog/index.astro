<script>
    const setupFilters = () => {
        const buttons = document.querySelectorAll(".cat-btn");
        const posts = document.querySelectorAll(".post-wrapper");
        const monthGroups = document.querySelectorAll(".month-group");

        console.log("Blog filters initialized. Buttons found:", buttons.length);

        if (buttons.length === 0) return;

        buttons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const selectedCat = btn.getAttribute("data-category")?.trim().toUpperCase();
                console.log("Selected category:", selectedCat);

                // 1. åˆ‡æ›æŒ‰éˆ•æ¨£å¼
                buttons.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");

                // 2. éæ¿¾æ–‡ç« 
                posts.forEach((post) => {
                    const postCat = post.getAttribute("data-cat")?.trim().toUpperCase();
                    const htmlPost = post as HTMLElement;

                    if (selectedCat === "ALL" || postCat === selectedCat) {
                        htmlPost.classList.remove("is-hidden");
                    } else {
                        htmlPost.classList.add("is-hidden");
                    }
                });

                // 3. è™•ç†æœˆä»½é¡¯ç¤º
                setTimeout(() => {
                    monthGroups.forEach((group) => {
                        const htmlGroup = group as HTMLElement;
                        const visiblePosts = htmlGroup.querySelectorAll(".post-wrapper:not(.is-hidden)");
                        if (visiblePosts.length === 0) {
                            htmlGroup.classList.add("month-hidden");
                        } else {
                            htmlGroup.classList.remove("month-hidden");
                        }
                    });
                }, 100);
            });
        });
    };

    // åŒæ™‚æ”¯æ´å‚³çµ±è¼‰å…¥èˆ‡ Astro çš„è½‰å ´è¼‰å…¥
    document.addEventListener("DOMContentLoaded", setupFilters);
    document.addEventListener("astro:page-load", setupFilters);
</script>

