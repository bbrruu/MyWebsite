---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={post.data.title}>
  <div class="paper-texture"></div>

  <article class="journal-article">
    <nav class="inner-nav">
      <a href="/blog" class="back-link">
        <span class="arrow">←</span>
        <span class="text">回到目錄 INDEX</span>
      </a>
    </nav>

    <header class="post-header">
      <div class="header-main-row">
        <div class="title-wrapper">
          <h1 class="post-title">{post.data.title}</h1>
          <div class="dynamic-accent-bar"></div>
        </div>

        <div class="post-meta">
          <time>{post.data.pubDate.toLocaleDateString('zh-TW', { year: 'numeric', month: '2-digit', day: '2-digit' })}</time>
          <span class="sep">|</span>
          <span class="mood-text">{post.data.mood || '還行'}</span>
        </div>
      </div>
      
      <div class="full-gray-line"></div>
    </header>

    <section class="post-content">
      <Content />
    </section>

    <footer class="post-footer">
      <p>記錄於：{post.data.location || 'Taipei'}</p>
    </footer>
  </article>
</Layout>

<style>
  .journal-article {
    max-width: 850px;
    margin: 5rem auto;
    padding: 0 2rem;
    font-family: "Noto Serif TC", serif;
    color: #2c2c2c;
  }

  /* 返回導覽 */
  .inner-nav { margin-bottom: 4rem; }
  .back-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: #8e8e8e;
    font-size: 0.8rem;
    letter-spacing: 2px;
    transition: 0.4s ease;
    position: relative;
    padding-bottom: 5px;
  }
  .back-link:hover { color: #8b4513; }
  .back-link .arrow { margin-right: 8px; transition: 0.4s ease; }
  .back-link:hover .arrow { transform: translateX(-8px); }

  /* 標題與資訊列 */
  .header-main-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 2rem;
  }

  /* 核心修正：標題包裹容器 */
  .title-wrapper {
    position: relative;
    width: fit-content; /* 寬度剛好等於標題文字寬度 */
  }

  .post-title {
    font-size: 2rem;
    margin: 0;
    font-weight: 700;
    letter-spacing: -1px;
    line-height: 1.2;
  }

  .post-meta {
    font-size: 0.95rem;
    color: #8e8e8e;
    display: flex;
    gap: 1rem;
    font-family: sans-serif;
    white-space: nowrap;
  }

  .mood-text { color: #8b4513; font-weight: 600; }

  /* 你的要求：根據字數調整長度 (比字節短一點點) */
  .dynamic-accent-bar {
    position: absolute;
    left: 0;
    bottom: -1.5rem; /* 與灰色線對齊的高度 */
    width: 85%;      /* 這裡設定比標題短一點點 (例如 85% 或 90%) */
    height: 4px;
    background-color: #8b4513;
    border-radius: 2px;
    z-index: 2;      /* 確保壓在灰線上 */
  }

  /* 全寬灰色基準線 */
  .full-gray-line {
    width: 100%;
    height: 1px;
    background-color: #e0dcd5;
    margin-top: 1.5rem; /* 必須與 .dynamic-accent-bar 的 bottom 距離對應 */
  }

  /* 內文 */
  .post-content { line-height: 2.3; font-size: 1.15rem; text-align: justify; margin-top: 3rem; }
  .post-content :global(p) { margin-bottom: 2.5rem; }
  .post-footer { margin-top: 8rem; font-size: 0.85rem; color: #8e8e8e; border-top: 1px dashed #e0dcd5; padding-top: 2rem; }

  @media (max-width: 768px) {
    .header-main-row { flex-direction: column; align-items: flex-start; gap: 1rem; }
    .post-meta { width: 100%; justify-content: flex-end; }
  }
</style>