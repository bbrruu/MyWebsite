---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allMusic = (await getCollection("music")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const groupedByArtist = allMusic.reduce((acc, post) => {
    const artist = post.data.artist || "佚名";
    if (!acc[artist]) acc[artist] = [];
    acc[artist].push(post);
    return acc;
}, {});

const artists = Object.keys(groupedByArtist);
---

<Layout title="拾音集 | 樂評編目">
    <div class="paper-texture"></div>

    <main class="music-archive">
        <header class="archive-header">
            <nav class="breadcrumb">
                <a href="/">HOME</a>
                <span class="sep">/</span>
                <span class="current">MUSIC</span>
            </nav>
            <h1>拾音集</h1>
            <div class="header-line"></div>
        </header>

        <div class="archive-content">
            {artists.map((artist) => (
                <section class="artist-section">
                    <div class="artist-header">
                        <div class="artist-name-group">
                            <span class="prefix">Artist</span>
                            <h2 class="artist-title">{artist}</h2>
                        </div>
                        <div class="track-count">{groupedByArtist[artist].length} Posts</div>
                    </div>

                    <div class="song-list">
                        {groupedByArtist[artist].map((post) => (
                            <div class="song-wrapper">
                                <a href={`/music/${post.id}`} class="music-entry">
                                    <div class="title-swap-container">
                                        <div class="title-default">
                                            {post.data.title} <span class="song-mark">《{post.data.songName}》</span>
                                        </div>
                                        <div class="title-hover">
                                            <span class="focus-artist">{post.data.artist}</span> <span class="song-mark">《{post.data.songName}》</span>
                                        </div>
                                    </div>
                                    <div class="entry-arrow">VIEW →</div>
                                </a>
                            </div>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </main>
</Layout>

<style>
    :root {
        --ink: #2c2c2c;
        --paper: #fdfaf6;
        --accent: #8b4513;
        --muted: #8e8e8e;
        --border: #e0dcd5;
    }

    .music-archive { 
        max-width: 800px; /* 稍微縮小容器寬度，讓視覺更聚焦 */
        margin: 4rem auto; 
        padding: 0 1.5rem; 
        font-family: "Noto Serif TC", serif; 
    }

    /* 麵包屑 */
    .breadcrumb { 
        display: flex; align-items: center; gap: 0.6rem; 
        font-family: sans-serif; font-size: 0.65rem; 
        letter-spacing: 0.15rem; margin-bottom: 1.5rem; 
    }
    .breadcrumb a, .breadcrumb .sep, .breadcrumb .current { text-decoration: none; color: var(--muted) !important; }
    .breadcrumb .current { font-weight: 700; color: var(--ink) !important; text-transform: uppercase; }

    /* 大標題縮小 */
    .archive-header h1 { font-size: 2.2rem; margin: 0; font-weight: 700; letter-spacing: -0.5px; }
    
    .header-line { width: 100%; height: 1px; background: var(--border); margin: 1.5rem 0 4rem; position: relative; }
    .header-line::after { content: ''; position: absolute; left: 0; top: -1px; width: 60px; height: 3px; background: var(--accent); }

    /* --- 歌手區隔：整體縮小 --- */
    .artist-section { margin-bottom: 5rem; }
    
    .artist-header {
        display: flex; justify-content: space-between; align-items: flex-end;
        padding-bottom: 0.8rem; border-bottom: 1.5px solid var(--ink);
        margin-bottom: 1.5rem;
    }

    .artist-name-group { display: flex; flex-direction: column; gap: 0.1rem; }
    .artist-name-group .prefix { font-size: 0.6rem; text-transform: uppercase; letter-spacing: 2px; color: var(--muted); font-family: sans-serif; }
    .artist-title { font-size: 1.6rem; margin: 0; color: var(--ink); font-weight: 700; } /* 從 2.2 縮小到 1.6 */
    
    .track-count { font-size: 0.7rem; font-family: sans-serif; color: var(--muted); padding-bottom: 0.3rem; }

    /* --- 音樂項目：精簡間距與字級 --- */
    .music-entry {
        display: flex; align-items: center; justify-content: space-between;
        text-decoration: none; color: inherit;
        padding: 1.2rem 0; border-bottom: 1px dashed var(--border);
        transition: 0.3s;
    }
    
    .title-swap-container {
        flex: 1; position: relative;
        height: 2rem; /* 高度隨之縮小 */
        overflow: hidden;
        display: flex; align-items: center;
    }

    .title-default, .title-hover {
        font-size: 1.1rem; /* 從 1.4 縮小到 1.1 */
        font-weight: 700;
        transition: all 0.45s cubic-bezier(0.23, 1, 0.32, 1);
        white-space: nowrap;
        line-height: 2rem;
    }

    .title-hover {
        position: absolute; top: 0; left: 0; opacity: 0;
        transform: translateY(10px);
        color: var(--accent);
    }

    .song-mark { font-weight: 400; font-size: 0.95rem; color: var(--muted); margin-left: 0.4rem; }
    .focus-artist { color: var(--accent); }

    /* Hover 動畫 */
    .music-entry:hover .title-default { opacity: 0; transform: translateY(-10px); }
    .music-entry:hover .title-hover { opacity: 1; transform: translateY(0); }

    .entry-arrow { font-size: 0.65rem; letter-spacing: 1px; color: var(--muted); opacity: 0; transition: 0.4s; }
    .music-entry:hover .entry-arrow { opacity: 1; color: var(--accent); }

    @media (max-width: 600px) {
        .artist-title { font-size: 1.4rem; }
        .title-default, .title-hover { font-size: 1rem; }
    }
</style>