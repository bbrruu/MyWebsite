---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// 1. 抓取所有音樂評論並排序
const allMusic = (await getCollection("music")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// 2. 依照演出者 (Artist) 進行分組
const groupedByArtist = allMusic.reduce((acc, post) => {
    const artist = post.data.artist || "佚名";
    if (!acc[artist]) acc[artist] = [];
    acc[artist].push(post);
    return acc;
}, {});

const artists = Object.keys(groupedByArtist);
---

<Layout title="拾音集 | 樂評編目 - Bruce">
    <div class="paper-texture"></div>

    <main class="music-archive">
        <header class="archive-header">
            <h1>拾音集 <small>SOUND & TRACKS</small></h1>
            <div class="header-line"></div>
            <div class="artist-filter">
                <label for="artist-select" class="filter-label">FILTER BY ARTIST</label>
                <div class="select-wrapper">
                    <select id="artist-select" class="artist-select">
                        <option value="all">全部 ALL</option>
                        {artists.map((artist) => (
                            <option value={artist}>{artist}</option>
                        ))}
                    </select>
                    <span class="select-arrow">↓</span>
                </div>
            </div>
        </header>

        <div class="archive-content" id="music-list">
            {artists.map((artist) => (
                <section class="artist-section" data-artist={artist}>
                    <div class="artist-header">
                        <div class="author-name-group">
                            <span class="prefix">Musician / Artist</span>
                            <h2 class="artist-title">{artist}</h2>
                        </div>
                        <div class="note-count">{groupedByArtist[artist].length} RECORDS</div>
                    </div>

                    <div class="note-list">
                        {groupedByArtist[artist].map((post, idx) => (
                            <div class={`note-wrapper${idx >= 5 ? ' extra-entry' : ''}`}>
                                <div class="music-entry">
                                    <a href={`/music/${post.id}`} class="title-swap-container">
                                        <div class="title-default">
                                            {post.data.title} <span class="song-mark">《{post.data.songName || 'Untitled'}》</span>
                                        </div>
                                        <div class="title-hover">
                                            <span class="focus-artist">{post.data.artist}</span>
                                            <span class="song-mark">《{post.data.songName || 'Untitled'}》</span>
                                            {(post.data as any).genre && <span class="cat-tag">#{(post.data as any).genre}</span>}
                                        </div>
                                    </a>
                                    <div class="entry-actions">
                                        {post.data.youtubeId && (
                                            <button class="preview-btn" data-youtube-id={post.data.youtubeId}>▶ PREVIEW</button>
                                        )}
                                        <a href={`/music/${post.id}`} class="entry-arrow">
                                            <span class="view-text">LISTEN</span>
                                            <span class="arrow">→</span>
                                        </a>
                                    </div>
                                </div>
                                {post.data.youtubeId && (
                                    <div class="inline-player" data-youtube-id={post.data.youtubeId}>
                                        <div class="player-ratio-box">
                                            <iframe allowfullscreen allow="autoplay; encrypted-media; picture-in-picture"></iframe>
                                        </div>
                                    </div>
                                )}
                            </div>
                        ))}
                    </div>
                    {groupedByArtist[artist].length > 5 && (
                        <div class="see-more-wrapper">
                            <button class="show-more-btn" data-artist={artist}>
                                顯示更多 MORE<div class="btn-line"></div>
                            </button>
                        </div>
                    )}
                </section>
            ))}
        </div>
    </main>
</Layout>

<script is:inline>
    function musicSetup() {
        // 歌手篩選下拉
        var select = document.getElementById('artist-select');
        var sections = document.querySelectorAll('.artist-section');
        if (!select) return;

        select.addEventListener('change', function() {
            var val = select.value;
            sections.forEach(function(section) {
                if (val === 'all' || section.dataset.artist === val) {
                    section.style.display = '';
                } else {
                    section.style.display = 'none';
                }
            });
        });

        // 顯示更多按鈕：切換下拉選單至該歌手
        document.querySelectorAll('.show-more-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var artist = btn.dataset.artist;
                if (!artist) return;
                select.value = artist;
                select.dispatchEvent(new Event('change'));
            });
        });

        // 音樂快速預覽播放器
        document.querySelectorAll('.preview-btn').forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                var youtubeId = btn.dataset.youtubeId;
                var wrapper = btn.closest('.note-wrapper');
                var player = wrapper && wrapper.querySelector('.inline-player');
                var iframe = player && player.querySelector('iframe');
                if (!player || !iframe || !youtubeId) return;

                var isOpen = player.classList.contains('open');

                // 關閉所有其他播放器
                document.querySelectorAll('.inline-player.open').forEach(function(p) {
                    if (p !== player) {
                        p.classList.remove('open');
                        var f = p.querySelector('iframe');
                        if (f) f.src = '';
                        var otherWrapper = p.closest('.note-wrapper');
                        var otherBtn = otherWrapper && otherWrapper.querySelector('.preview-btn');
                        if (otherBtn) otherBtn.classList.remove('active');
                    }
                });

                if (isOpen) {
                    player.classList.remove('open');
                    iframe.src = '';
                    btn.classList.remove('active');
                } else {
                    iframe.src = 'https://www.youtube.com/embed/' + youtubeId + '?autoplay=1';
                    player.classList.add('open');
                    btn.classList.add('active');
                }
            });
        });
    }

    document.addEventListener('astro:page-load', musicSetup);
</script>

<style>
    .music-archive {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0;
        font-family: "Noto Serif TC", serif;
    }

    .archive-header h1 {
        font-size: 1.6rem;
        margin: 0;
        font-weight: 700;
        letter-spacing: -1.5px;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }
    .archive-header h1 small {
        font-size: 0.75rem;
        font-family: sans-serif;
        letter-spacing: 4px;
        color: var(--muted);
        font-weight: 400;
    }

    .header-line { width: 100%; height: 1px; background: var(--border); margin: 1rem 0 1.2rem; position: relative; }
    .header-line::after { content: ''; position: absolute; left: 0; top: -1px; width: 80px; height: 3px; background: var(--accent); }

    .artist-filter { display: flex; align-items: center; gap: 1rem; margin-bottom: 2.5rem; }
    .filter-label { font-size: 0.6rem; font-family: sans-serif; letter-spacing: 2px; color: var(--muted); font-weight: 700; text-transform: uppercase; white-space: nowrap; }
    .select-wrapper { position: relative; display: inline-flex; align-items: center; }
    .artist-select {
        appearance: none; -webkit-appearance: none;
        background: transparent;
        border: 1px solid var(--border);
        border-radius: 3px;
        padding: 0.35rem 2rem 0.35rem 0.8rem;
        font-size: 0.8rem;
        font-family: "Noto Serif TC", serif;
        color: var(--ink);
        cursor: pointer;
        transition: border-color 0.3s, color 0.3s;
        min-width: 160px;
    }
    .artist-select:focus { outline: none; border-color: var(--accent); }
    .artist-select:hover { border-color: var(--accent); color: var(--accent); }
    .select-arrow {
        position: absolute; right: 0.6rem;
        font-size: 0.6rem; color: var(--muted);
        pointer-events: none; transition: color 0.3s;
    }
    .select-wrapper:hover .select-arrow { color: var(--accent); }

    .artist-section { margin-bottom: 3rem; }
    .artist-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding-bottom: 0.7rem;
        border-bottom: 2px solid var(--ink);
        margin-bottom: 0.8rem;
    }
    .author-name-group .prefix {
        font-size: 0.6rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        color: var(--muted);
        font-family: sans-serif;
        display: block;
        margin-bottom: 0.3rem;
    }
    .artist-title { font-size: 1.2rem; margin: 0; color: var(--ink); font-weight: 700; }
    .note-count {
        font-size: 0.72rem;
        color: var(--accent);
        font-weight: 700;
        font-family: sans-serif;
        letter-spacing: 1px;
    }

    .music-entry {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: inherit;
        padding: 0.8rem 0;
        border-bottom: 1px dashed var(--border);
        transition: 0.4s ease;
    }
    .music-entry:hover { background: rgba(139, 69, 19, 0.02); padding-left: 1.5rem; }

    .entry-actions {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        flex-shrink: 0;
    }

    .preview-btn {
        background: none;
        border: 1px solid var(--border);
        border-radius: 2px;
        padding: 0.25rem 0.55rem;
        font-size: 0.6rem;
        font-family: sans-serif;
        letter-spacing: 1.5px;
        color: var(--muted);
        transition: 0.3s;
        white-space: nowrap;
        line-height: 1.4;
    }
    .preview-btn:hover { border-color: var(--accent); color: var(--accent); }
    .preview-btn.active { background: var(--accent); color: var(--paper); border-color: var(--accent); }

    .inline-player {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s ease;
    }
    .inline-player.open { max-height: 100vw; }
    .player-ratio-box {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        margin: 0.5rem 0 0.8rem;
    }
    .player-ratio-box iframe {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        border: none;
        border-radius: 4px;
    }

    .title-swap-container {
        flex: 1;
        position: relative;
        height: 1.5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        text-decoration: none;
        color: inherit;
    }
    .title-default, .title-hover {
        font-size: 0.95rem;
        font-weight: 700;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        white-space: nowrap;
        line-height: 1.5rem;
    }
    .title-hover {
        position: absolute; top: 0; left: 0; 
        opacity: 0; 
        transform: translateY(15px); 
        color: var(--accent);
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }
    
    .song-mark { font-weight: 400; font-size: 1rem; color: var(--muted); margin-left: 0.5rem; }
    .cat-tag { font-size: 0.75rem; color: var(--muted); font-family: sans-serif; opacity: 0.6; }

    .music-entry:hover .title-default { opacity: 0; transform: translateY(-15px); }
    .music-entry:hover .title-hover { opacity: 1; transform: translateY(0); }

    .entry-arrow { 
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.75rem; 
        letter-spacing: 2px; 
        color: var(--muted); 
        opacity: 0.4; 
        transition: 0.4s; 
        font-family: sans-serif;
    }
    .music-entry:hover .entry-arrow { opacity: 1; color: var(--accent); transform: translateX(5px); }
    .view-text { font-weight: 700; }

    .extra-entry { display: none; }

.see-more-wrapper { display: flex; justify-content: flex-end; margin-top: 0.8rem; }
    .show-more-btn {
        background: none; border: none; cursor: pointer;
        color: var(--muted); font-size: 0.7rem; letter-spacing: 2px;
        font-family: sans-serif; position: relative; padding: 8px 0;
        transition: 0.3s;
    }
    .show-more-btn .btn-line { position: absolute; bottom: 0; right: 0; width: 30px; height: 2px; background-color: var(--border); transition: 0.4s; }
    .show-more-btn:hover { color: var(--accent); }
    .show-more-btn:hover .btn-line { width: 100%; background-color: var(--accent); }

    @media (max-width: 850px) {
        .archive-header h1 { font-size: 2.5rem; flex-direction: column; gap: 0.5rem; }
        .artist-title { font-size: 1.6rem; }
        .title-default, .title-hover { font-size: 1.1rem; }
        .view-text { display: none; }
    }
</style>