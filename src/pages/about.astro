<script is:inline>
  (function() {
    let currentLang = 'zh';

    function applyLanguage(lang) {
      currentLang = lang;

      // åˆ‡æ›æ‰€æœ‰å…§å®¹å…ƒç´ ï¼ˆä½†æ’é™¤èªè¨€åˆ‡æ›æŒ‰éˆ•å…§çš„å…ƒç´ ï¼‰
      const allElements = document.querySelectorAll('[data-lang]');
      allElements.forEach((el) => {
        // è·³éèªè¨€åˆ‡æ›æŒ‰éˆ•å…§çš„é¸é …å…ƒç´ 
        if (el.classList.contains('lang-option')) {
          return;
        }

        const elLang = el.getAttribute('data-lang');
        if (elLang === lang) {
          el.style.display = '';
        } else {
          el.style.display = 'none';
        }
      });

      // æ›´æ–°æŒ‰éˆ•æ¨£å¼
      const options = document.querySelectorAll('#lang-toggle .lang-option');
      options.forEach((opt) => {
        const optLang = opt.getAttribute('data-lang');
        if (optLang === lang) {
          opt.classList.add('active');
        } else {
          opt.classList.remove('active');
        }
        // ç¢ºä¿æŒ‰éˆ•é¸é …æ°¸é å¯è¦‹
        opt.style.display = '';
      });
    }

    function handleClick(e) {
      // ä¸ç®¡é»æ“ŠæŒ‰éˆ•çš„å“ªå€‹ä½ç½®ï¼Œéƒ½åˆ‡æ›åˆ°å¦ä¸€å€‹èªè¨€
      const newLang = currentLang === 'zh' ? 'en' : 'zh';
      applyLanguage(newLang);
    }

    function init() {
      const btn = document.getElementById('lang-toggle');
      if (!btn) return;

      // æª¢æŸ¥æ˜¯å¦å·²ç¶“åˆå§‹åŒ–é
      if (btn.hasAttribute('data-lang-setup')) return;

      // æ¨™è¨˜ç‚ºå·²è¨­ç½®
      btn.setAttribute('data-lang-setup', 'true');

      // ç¶å®šé»æ“Šäº‹ä»¶
      btn.removeEventListener('click', handleClick);
      btn.addEventListener('click', handleClick);

      // åˆå§‹åŒ–æ™‚å¼·åˆ¶æ‡‰ç”¨ä¸­æ–‡
      applyLanguage('zh');
    }

    // åˆå§‹åŒ–
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        setTimeout(init, 50);
      });
    } else {
      setTimeout(init, 50);
    }

    // Astro è½‰å ´æ”¯æ´
    document.addEventListener('astro:page-load', function() {
      currentLang = 'zh';
      setTimeout(init, 50);
    });
  })();
</script>

