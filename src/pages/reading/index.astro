---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// 1. 抓取閱測筆記並排序
const allReading = (await getCollection("reading")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// 2. 依照作者分組
const groupedByAuthor = allReading.reduce((acc, post) => {
    const author = post.data.author || "佚名";
    if (!acc[author]) acc[author] = [];
    acc[author].push(post);
    return acc;
}, {});

const authors = Object.keys(groupedByAuthor);
---

<Layout title="閱測筆記 | 書海拾貝 - Bruce">
    <main class="reading-archive">
        <header class="archive-header">
            <h1>閱測筆記 <small>BOOK NOTES</small></h1>
            <div class="header-line"></div>
        </header>

        <div class="archive-content">
            {authors.map((author) => (
                <section class="author-section">
                    <div class="author-header">
                        <div class="author-name-group">
                            <span class="prefix">Writer / Thinker</span>
                            <h2 class="author-title">{author}</h2>
                        </div>
                        <div class="note-count">{groupedByAuthor[author].length} NOTES</div>
                    </div>

                    <div class="note-list">
                        {groupedByAuthor[author].map((post) => (
                            <div class="note-wrapper">
                                <a href={`/reading/${post.id}`} class="reading-entry">
                                    <div class="title-swap-container">
                                        <div class="title-default">
                                            〈{post.data.title}〉 <span class="book-mark">《{post.data.bookName || '未命名書籍'}》</span>
                                        </div>
                                        <div class="title-hover">
                                            <span class="focus-author">{post.data.author}</span> 
                                            <span class="book-mark">《{post.data.bookName || '未命名書籍'}》</span>
                                        </div>
                                    </div>
                                    <div class="entry-arrow">READ →</div>
                                </a>
                            </div>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </main>
</Layout>

<style>
    .reading-archive {
        max-width: 1400px;
        margin: 4rem auto;
        padding: 0 4rem;
        font-family: "Noto Serif TC", serif;
    }

    .breadcrumb { display: flex; align-items: center; gap: 0.8rem; font-family: sans-serif; font-size: 0.7rem; letter-spacing: 0.2rem; margin-bottom: 2rem; }
    .breadcrumb a { text-decoration: none; color: var(--muted); transition: 0.3s; }
    .breadcrumb a:hover { color: var(--accent); }
    .breadcrumb .sep { color: var(--border); }
    .breadcrumb .current { font-weight: 700; color: var(--ink); text-transform: uppercase; }

    .archive-header h1 { 
        font-size: 2.3rem; margin: 0; font-weight: 700; letter-spacing: -1.5px; 
        display: flex; justify-content: space-between; align-items: baseline;
    }
    .archive-header h1 small { font-size: 0.9rem; font-family: sans-serif; letter-spacing: 4px; color: var(--muted); font-weight: 400; }

    .header-line { width: 100%; height: 1px; background: var(--border); margin: 2rem 0 5rem; position: relative; }
    .header-line::after { content: ''; position: absolute; left: 0; top: -1px; width: 80px; height: 3px; background: var(--accent); }

    .author-section { margin-bottom: 6rem; }
    .author-header {
        display: flex; justify-content: space-between; align-items: flex-end;
        padding-bottom: 1.2rem; border-bottom: 2px solid var(--ink); margin-bottom: 2rem;
    }
    .author-name-group .prefix { font-size: 0.65rem; text-transform: uppercase; letter-spacing: 3px; color: var(--muted); font-family: sans-serif; display: block; margin-bottom: 0.5rem; }
    .author-title { font-size: 2rem; margin: 0; color: var(--ink); font-weight: 700; }
    .note-count { font-size: 0.8rem; color: var(--accent); font-weight: 700; font-family: sans-serif; letter-spacing: 1px; }

    .reading-entry {
        display: flex; align-items: center; justify-content: space-between;
        text-decoration: none; color: inherit; padding: 2rem 0;
        border-bottom: 1px dashed var(--border); transition: 0.4s ease;
    }
    .reading-entry:hover { background: rgba(139, 69, 19, 0.02); padding-left: 1.5rem; }

    .title-swap-container { flex: 1; position: relative; height: 1.8rem; overflow: hidden; display: flex; align-items: center; }
    .title-default, .title-hover {
        font-size: 1.25rem; font-weight: 700;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        white-space: nowrap; line-height: 1.8rem;
    }
    .title-hover { position: absolute; top: 0; left: 0; opacity: 0; transform: translateY(15px); color: var(--accent); }
    .book-mark { font-weight: 400; font-size: 1rem; color: var(--muted); margin-left: 0.8rem; }
    
    .reading-entry:hover .title-default { opacity: 0; transform: translateY(-15px); }
    .reading-entry:hover .title-hover { opacity: 1; transform: translateY(0); }
    .entry-arrow { font-size: 0.75rem; letter-spacing: 2px; color: var(--muted); opacity: 0.4; transition: 0.4s; font-family: sans-serif; }
    .reading-entry:hover .entry-arrow { opacity: 1; color: var(--accent); transform: translateX(5px); }

    @media (max-width: 850px) {
        .archive-header h1 { font-size: 2.5rem; flex-direction: column; gap: 0.5rem; }
        .author-title { font-size: 1.6rem; }
        .title-default, .title-hover { font-size: 1.1rem; }
    }
</style>