---
import Layout from "../layouts/Layout.astro";
import MinesweeperGame from "../components/minesweeper/MinesweeperGame";
---

<Layout title="踩地雷 | Minesweeper - Bruce">
  <div class="game-wrapper">
    <div class="game-title">
      <h1>踩地雷 <small>MINESWEEPER</small></h1>
      <p class="subtitle">左鍵翻格・右鍵插旗・手機長按插旗</p>
    </div>
    <MinesweeperGame client:load />
  </div>
</Layout>

<style>
  .game-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 0 3rem;
  }
  .game-title {
    text-align: center;
  }
  .game-title h1 {
    margin: 0;
    font-size: 2rem;
    letter-spacing: 0.05em;
  }
  .game-title small {
    font-size: 0.9rem;
    color: var(--muted);
    letter-spacing: 0.2em;
    font-weight: 400;
    margin-left: 0.5rem;
  }
  .subtitle {
    margin: 0.25rem 0 0;
    font-size: 0.8rem;
    color: var(--muted);
    letter-spacing: 0.1em;
  }
</style>

<style is:global>
  /* ── Minesweeper Game ── */
  .ms-game {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    user-select: none;
  }

  /* Difficulty panel */
  .ms-difficulty {
    width: 100%;
    max-width: 700px;
  }
  .ms-difficulty-btns {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  .ms-diff-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.4rem 0.9rem;
    border: 1px solid var(--border);
    background: var(--paper);
    color: var(--ink);
    cursor: pointer;
    font-family: inherit;
    font-size: 0.85rem;
    transition: background 0.15s, color 0.15s;
    border-radius: 2px;
  }
  .ms-diff-btn:hover {
    background: var(--accent);
    color: var(--paper);
    border-color: var(--accent);
  }
  .ms-diff-btn.active {
    background: var(--ink);
    color: var(--paper);
    border-color: var(--ink);
  }
  .ms-diff-hint {
    font-size: 0.65rem;
    opacity: 0.7;
    margin-top: 1px;
  }

  /* Custom form */
  .ms-custom-form {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: flex-end;
    justify-content: center;
    margin-top: 0.75rem;
    padding: 0.75rem;
    border: 1px solid var(--border);
    background: rgba(139, 69, 19, 0.03);
  }
  .ms-custom-form label {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--muted);
    letter-spacing: 0.05em;
  }
  .ms-custom-form input {
    width: 70px;
    padding: 0.3rem 0.5rem;
    border: 1px solid var(--border);
    background: var(--paper);
    color: var(--ink);
    font-family: inherit;
    font-size: 0.9rem;
    text-align: center;
  }
  .ms-error {
    width: 100%;
    text-align: center;
    font-size: 0.75rem;
    color: #cc3030;
    margin: 0;
  }
  .ms-apply-btn {
    padding: 0.4rem 1rem;
    border: 1px solid var(--ink);
    background: var(--ink);
    color: var(--paper);
    font-family: inherit;
    font-size: 0.85rem;
    cursor: pointer;
    border-radius: 2px;
  }
  .ms-apply-btn:hover {
    background: var(--accent);
    border-color: var(--accent);
  }

  /* Header */
  .ms-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.6rem 1rem;
    border: 2px solid var(--border);
    background: rgba(139, 69, 19, 0.04);
    width: fit-content;
    min-width: 220px;
  }
  .ms-counter {
    font-size: 1.5rem;
    font-weight: bold;
    letter-spacing: 0.1em;
    color: #cc3030;
    font-variant-numeric: tabular-nums;
    min-width: 3ch;
    text-align: center;
  }
  .ms-timer-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }
  .ms-best {
    font-size: 0.65rem;
    color: var(--muted);
    letter-spacing: 0.05em;
  }
  .ms-reset-btn {
    font-size: 1.6rem;
    background: none;
    border: 1px solid var(--border);
    cursor: pointer;
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    transition: transform 0.1s;
    line-height: 1;
  }
  .ms-reset-btn:hover { transform: scale(1.1); }
  .ms-reset-btn:active { transform: scale(0.95); }

  /* Board */
  .ms-board-wrapper {
    overflow-x: auto;
    max-width: 100vw;
    padding-bottom: 0.5rem;
  }
  .ms-board {
    display: grid;
    grid-template-columns: repeat(var(--cols), 28px);
    gap: 1px;
    background: var(--border);
    border: 2px solid var(--border);
    width: fit-content;
  }
  @media (max-width: 768px) {
    .ms-board {
      grid-template-columns: repeat(var(--cols), 24px);
    }
  }

  /* Cell */
  .ms-cell {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: bold;
    font-family: inherit;
    cursor: pointer;
    border: none;
    background: var(--paper);
    color: var(--ink);
    padding: 0;
    transition: background 0.08s;
    -webkit-tap-highlight-color: transparent;
    touch-action: none;
  }
  @media (max-width: 768px) {
    .ms-cell {
      width: 24px;
      height: 24px;
      font-size: 0.65rem;
    }
  }
  .ms-cell:not(.revealed):hover  { background: rgba(139, 69, 19, 0.08); }
  .ms-cell:not(.revealed):active { background: rgba(139, 69, 19, 0.15); }
  .ms-cell.revealed  { background: rgba(139, 69, 19, 0.05); cursor: default; }
  .ms-cell.mine      { background: rgba(139, 69, 19, 0.08); }
  .ms-cell.exploded  { background: #ffaaaa; }
  .ms-cell.flagged   { background: rgba(255, 200, 0, 0.1); }

  /* Status banner */
  .ms-status {
    font-size: 1.1rem;
    letter-spacing: 0.1em;
    padding: 0.5rem 1.5rem;
    border: 1px solid var(--border);
    text-align: center;
  }
  .ms-status.won  { border-color: #4a9c5a; color: #4a9c5a; background: rgba(74, 156, 90, 0.06); }
  .ms-status.lost { border-color: #cc3030; color: #cc3030; background: rgba(204, 48, 48, 0.06); }

  /* Flag toggle */
  .ms-flag-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .ms-flag-btn {
    padding: 0.4rem 0.8rem;
    border: 1px solid var(--border);
    background: var(--paper);
    color: var(--ink);
    font-family: inherit;
    font-size: 0.85rem;
    cursor: pointer;
    border-radius: 2px;
    transition: background 0.15s;
  }
  .ms-flag-btn.active {
    background: #f0c040;
    border-color: #c09000;
    color: #333;
  }
  .ms-flag-hint {
    font-size: 0.7rem;
    color: var(--muted);
  }
</style>
